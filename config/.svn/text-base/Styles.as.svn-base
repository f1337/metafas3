package 
{

	public class Styles
	{	
		// >>> PUBLIC METHODS
		public static function getStyles (obj:String) : Object
		{
			// Logger.info('Styles#getStyle :: Styles[obj] = '+Styles[obj]);													
			return (Styles[obj]) ? Styles[obj] : null;
		}
		
		public static function setStyle (obj:String, prop:String, val:*) :void
		{
			Styles[obj][prop] = val;
		}
		
		public static function setStyles (obj:String, val:Object) :void
		{
			for (var pname:String in val)
			{
				Styles[pname] = val[pname];
			}
		}
		
		// >>> PRIVATE PROPERTIES
		protected static var ningStyles:Object = {
			bgColor: 0xffffff,
			fontColor: 0x666666,
			linkColor: 0x00518B
		}
	}
}